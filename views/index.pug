        script(src="./assets/vendor/php-email-form/validate.js")
        script(src="./assets/js/main.js")
    body
        header(id="header" class="header d-flex align-items-center")
            div.container-fluid.container-xl.d-flex.align-items-center.justify-content-between
                a(href="/" class="logo d-flex align-items-center") 
                    img(src="https://cdn-icons-png.flaticon.com/512/5395/5395494.png" alt="")
                nav(id="navbar" class="navbar")
                    ul
                        li
                            a(href="/") Hlavní formulář
                        li    
                            a(href="/about") O stránce
                i(class="mobile-nav-toggle mobile-nav-show bi bi-list")
                i(class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x")
        section(id="home" class="hero")
            div(class="container position-relative")
                div(class="row gy-5" data-aos="fade-in")
                    div(class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center text-center text-lg-start")
                        h2 Výsledky hodnocení 
                            span(class="color") filmů
                        p Zde najdeš seznam hodnocení filmů
                
        main(id="main" class="portfolio sections-bg")
            section(id="about" class="about")
                div(class="container" data-aos="fade-up")
                    div(class="section-header" id="vanilla")
                        h2 Seznam hodnocených filmů
            section(id="banlist" class="portfolio sections-bg")
                div(id="content-container")
                    div(id="content")
                        div(class="box-element")
                            div(class="box-head-light")
                                h3 Nedávné bany
                            div(class="box-content no-padding")
                                div(class="dataTables_wrapper")
                                    table(class="i-table fullwidth table table-striped")
                                        thead
                                            tr
                                                td Název filmu
                                                td Rok vydání filmu
                                                td Hodnocení filmu
                                                td Poznámka k filmu
                                        tbody
                                            each film in filmy
                                                tr
                                                    td #{film.film}
                                                    td #{film.rok}
                                                    td #{film.hodnoceni}
                                                    td #{film.poznamka}
        footer(id="footer" class="footer")
            div(class="container mt-4")
                div(class="copyright") &copy; Copyright 
                    strong
                        span Jakub Rybka
                div(class="credits") IT2, SŠPU Opava
        a(href="#" class="scroll-top d-flex align-items-center justify-content-center")
            i(class="bi bi-arrow-up-short")
        div(id="preloader")
