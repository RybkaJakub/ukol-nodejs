doctype html 
html
    head
        title "Pokus" 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js") 
    body
        header.bg-success.text-white.text-center.p-1
            h1 #{nadpis}
        main.container
            table(class="table table-striped")
                thead
                    tr.bg-dark.text-light 
                        th Název filmu
                        th Rok vydání filmu 
                        th Hodnocení filmu
                        th Poznámka k filmu
                tbody 
                    each film in filmy
                        tr
                            td #{film.film}
                            td #{film.rok}
                            td #{film.hodnoceni}
                            td #{film.poznamka}
        footer.text-center.bg-warning
            div.text-center.p-3
                p © 2020 Copyright: Kubík
                p
                    a(href="/") Úvodní stránka
                p
                    a(href="/about") O programu
